<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Activity.User.BasketActivity">

    <!-- Header with back button and title -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/btnTrashBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNameAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/basket"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Trash/back button -->
    <ImageButton
        android:id="@+id/btnTrashBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:padding="12dp"
        android:src="@drawable/ic_trashback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Basket items list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcViewBasket"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tvTotalPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <!-- Total price -->
    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/totalprice_bg"
        android:gravity="center|left"
        android:paddingStart="16dp"
        android:text="@string/total_price"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnPlaceOrder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Place order button -->
    <Button
        android:id="@+id/btnPlaceOrder"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/purple_bg"
        android:text="@string/place_an_order"
        android:textColor="@color/white"

        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Bottom navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/purple_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            >

            <LinearLayout
                android:id="@+id/layoutMain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgMain"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/btn_1" />

                <TextView
                    android:id="@+id/textView8144"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/main"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBasket"
                android:layout_width="4dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgBasket"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/btn_2" />

                <TextView
                    android:id="@+id/textView81"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/basket"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutFavorite"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgFavorite"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/btn_3" />

                <TextView
                    android:id="@+id/textView8112"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:text="@string/favorite"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgOrderHistory"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/btn_4" />

                <TextView
                    android:id="@+id/textView810"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/history"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/btn_5" />

                <TextView
                    android:id="@+id/textView811"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/profile"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutUsers"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgClients"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_user" />

                <TextView
                    android:id="@+id/textView812"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/users"
                    android:maxLines="4"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutProduct"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"

                    android:src="@drawable/ic_shoes" />

                <TextView
                    android:id="@+id/textView8110"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/product"
                    android:maxLines="4"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutGraphic"
                android:layout_width="4dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgGraphic"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/graphic_ic" />

                <TextView
                    android:id="@+id/textView8111"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/graphic"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

            </LinearLayout>
        </LinearLayout>


    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>