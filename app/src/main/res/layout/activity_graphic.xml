<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Activity.Analyst.GraphicActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">
        <ImageButton
            android:id="@+id/imgProfile"
            android:layout_width="wrap_content"
            android:src="@drawable/btn_5"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/imgGmail"
            android:layout_width="wrap_content"
            android:src="@drawable/mail_ic"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>

        <com.example.customview.customView.AnalyticalPieChart
            android:id="@+id/analyticalPieChart_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/example_background"
            app:pieChartColors="@array/analyticalPieChartColorArray"
            app:pieChartTextAmountColor="?android:attr/textColor"
            app:pieChartTextNumberColor="?android:attr/textColor"
            app:pieChartTextDescriptionColor="?android:attr/textColorHint"
            app:pieChartTextNumberSize="16sp"
            app:pieChartTextDescriptionSize="14sp"
            app:pieChartTextAmount="@string/analyticalPieChartAmount"
            app:pieChartCircleStrokeWidth="6dp"
            app:pieChartCircleSectionSpace="2"
            android:layout_marginTop="12dp"/>

        <com.example.customview.customView.AnalyticalPieChart
            android:id="@+id/analyticalPieChart_2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/example_background"
            app:pieChartColors="@array/analyticalPieChartColorArray2"
            app:pieChartTextAmountColor="?android:attr/textColor"
            app:pieChartTextNumberColor="?android:attr/textColor"
            app:pieChartTextDescriptionColor="?android:attr/textColorHint"
            app:pieChartTextNumberSize="16sp"
            app:pieChartTextDescriptionSize="12sp"
            app:pieChartTextAmountSize="16sp"
            app:pieChartTextAmount="@string/analyticalPieChartAmount"
            app:pieChartCircleStrokeWidth="8dp"
            app:pieChartCircleSectionSpace="0"
            app:pieChartCirclePadding="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:pieChartCirclePaintRoundSize="false"
            android:layout_marginTop="12dp"/>

        <com.example.customview.customView.AnalyticalPieChart
            android:id="@+id/analyticalPieChart_3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/example_background"
            app:pieChartColors="@array/analyticalPieChartColorArray2"
            app:pieChartTextAmountColor="?android:attr/textColor"
            app:pieChartTextNumberColor="?android:attr/textColor"
            app:pieChartTextDescriptionColor="?android:attr/textColorHint"
            app:pieChartTextNumberSize="16sp"
            app:pieChartTextDescriptionSize="12sp"
            app:pieChartTextAmountSize="16sp"
            app:pieChartTextAmount="@string/analyticalPieChartAmount"
            app:pieChartCircleStrokeWidth="8dp"
            app:pieChartCircleSectionSpace="0"
            app:pieChartCirclePadding="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:pieChartCirclePaintRoundSize="false"
            android:layout_marginTop="12dp"/>

        <com.example.customview.customView.AnalyticalPieChart
            android:id="@+id/analyticalPieChart_4"
